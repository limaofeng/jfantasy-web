<script type="text/javascript">
    $(function () {
        $("#saveForm").ajaxForm({
            beforeSerialize: function (zhis, options) {
                var _data = {};
                options.data = _data;
            },
            success: function (data) {
                $('#pager').pager().reload();
                $.msgbox({
                    msg: "保存成功",
                    type: "success"
                });
                $page$.backpage();
            },
            error: function() {
                $.msgbox({
                    msg: "修改失败",
                    type: "error"
                });
            }
        });

        if($('.town').data('defval')){
            $('.province').attr('data-defval',$('.town').data('defval').toString().substring(0,2)+'0000');
            $('.city').attr('data-defval',$('.town').data('defval').toString().substring(0,4)+'00');
        }


        var town = $('.town').select3('/areas/search',{value:'id',text:'name'});
        var city = $('.city').select3('/areas/search',{value:'id',text:'name'},function(data){
            if(!data){
                return;
            }
            town.load({'EQS_parent.id':data.id,pageSize:500});
        });
        $('.province').select3('/areas/search',{value:'id',text:'name'},function(data){
            if(!data){
                return;
            }
            city.load({'EQS_parent.id':data.id,pageSize:200});
            $('.town').select3('',{value:'id',text:'name'}).load({});
        }).load({EQI_layer:0,pageSize:100});
    });
</script>
<div class="pad10L pad10R">
    <div class="example-box">
        <form id="saveForm" action="/clinics/save" method="post" cssClass="center-margin">
            <input type="hidden" name="id" value="{{clinic.id}}">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                诊所名称：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <input type="text" name="name" value="{{clinic.name}}"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                百度地图坐标：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <input type="text" name="coordinates" value="{{clinic.coordinates}}"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                诊所地址：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <select class="chosen-select province">
                                    <option value="">请选择省份</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row townView">
                        <div class="form-label col-md-3">
                            <label for="">
                                地区：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <select class="chosen-select town" name="area" data-defval="{{clinic.area.id}}">
                                    <option value="">请选择地区</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                联系方式：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <input type="text" name="contact" value="{{clinic.contact}}"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                诊所类别：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <select class="chosen-select" name="type" data-placeholder="请选择诊所类别" data-defval="{{clinic.type}}">
                                    <option value="proprietary" {{#equals clinic.type 'proprietary'}}selected="true"{{/equals}}>自营</option>
                                    <option value="join" {{#equals clinic.type 'join'}}selected="true"{{/equals}}>加盟</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                市区：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <select class="chosen-select city">
                                    <option value="">请选择市区</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row" style="text-align: center;">
                <div>
                    <div style="float: left;padding-right: 50px;padding-left: 27px;">
                        <a href="javascript:void(0);" class="btn medium primary-bg radius-all-4 menu-save4" onclick="$('#saveForm').submit();return false;" title=" 保存">
                            <span class="glyph-icon icon-separator">
                                 <i class="glyph-icon icon-save"></i>
                            </span>
                             <span class="button-content">
                                 保存
                             </span>
                        </a>
                    </div>
                    <div style="float: left;">
                        <a href="javascript:void(0);" class="btn medium primary-bg radius-all-4 switch menu-view back-page " title="返回">
                            <span class="glyph-icon icon-separator">
                                  <i class="glyph-icon icon-reply"></i>
                            </span>
                             <span class="button-content">
                                 返回
                             </span>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
