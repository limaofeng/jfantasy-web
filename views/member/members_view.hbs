                    <div class="form-label col-md-3">
                        <label for="">
                            是否启用：
                        </label>
                    </div>
                    <div class="form-checkbox-radio col-md-9">
                        <div class="append-right">
                            {{dict member.enabled '{true:"是",false:"否"}'}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="normal-tabs-2">
        <div class="row">
            <div class="col-md-6">
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            姓名：
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                            {{member.details.name}}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            性别：
                        </label>
                    </div>
                    <div class="form-checkbox-radio col-md-9">
                        <div class="append-left">
                            {{dict member.details.sex '{male:"男",female:"女"}'}}
                        </div>
                    </div>
                </div>
