<div class="login-test">
    <div class="login-container animated fadeInDown">
        <div class="loginbox bg-white">
            <div class="loginbox-title"> 登 录 </div>
            <div class="loginbox-social">
                <div class="social-title ">连接你的社交账户</div>
                <div class="social-buttons">
                    <a href="" class="button-facebook">
                        <i class="social-icon fa fa-facebook"></i>
                    </a>
                    <a href="" class="button-twitter">
                        <i class="social-icon fa fa-twitter"></i>
                    </a>
                    <a href="" class="button-google">
                        <i class="social-icon fa fa-google-plus"></i>
                    </a>
                </div>
            </div>
            <div class="loginbox-or">
                <div class="or-line"></div>
                <div class="or">OR</div>
            </div>
            <div class="loginbox-textbox">
                <input type="text" class="form-control" placeholder="Email" />
            </div>
            <div class="loginbox-textbox">
                <input type="text" class="form-control" placeholder="Password" />
            </div>
            <div class="loginbox-forgot">
                <a href="">忘记密码?</a>
            </div>
            <div class="loginbox-submit">
                <input type="button" onclick="unlogin()" class="btn btn-primary btn-block" value="登录">
            </div>
            <div class="loginbox-signup">
                <a href="javascript:register()">使用 Email 注册</a>
            </div>
        </div>
        <div class="logobox">
        </div>
    </div>
</div>
<script>
    function login(){
        $('.lock-test').hide();
        $('.login-test').show().prevAll('div').removeClass('rmao').addClass('mao');
        $('.login-container').removeClass('animated fadeOutUp').addClass('animated fadeInDown');
    }
    function unlogin(){
        $('.login-test').delay(1000).hide(0).prevAll('div').removeClass('mao').addClass('rmao');
        $('.login-container').removeClass('animated fadeInDown').addClass('animated fadeOutUp');
    }
</script>