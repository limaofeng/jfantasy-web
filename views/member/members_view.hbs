        <div class="row">
            <table class="table table-hover mrg5B text-center">
                <thead>
                <tr>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>身份证</th>
                    <th>出生年月</th>
                    <th>联系电话</th>
                    <th>创建时间</th>
                </tr>
                </thead>
                <tbody>
                {{#if patients}}
                    {{#patients}}
                        <tr class="template" name="default">
                            <td>
                                <span class="view-field">{{name}}</span>
                            </td>
                            <td>
                                <span class="view-field">{{dict sex '{male:"男", female:"女",unknow:"不详"}'}}</span>
                            </td>
                            <td>
                                <span class="view-field">{{idcard}}</span>
                            </td>
                            <td>
                                <span class="view-field">{{date birthday 'yyyy-MM-dd'}}</span>
                            </td>
                            <td>
                                <span class="view-field">{{phone}}</span>
                            </td>
                            <td>
                                <span class="view-field">{{date createTime 'yyyy-MM-dd'}}</span>
