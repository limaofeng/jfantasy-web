{{#extend "wrapper"}}
    {{#content "pageTitle"}}
        挂号列表
        <small>
            {{doctor.name}}所有挂号信息
        </small>
    {{/content}}
    {{#content "head"}}
        <script type="text/javascript">
            $(function () {
                //当浏览器窗口发生变化时,自动调整布局的js代码
                var _$gridPanel = $('.grid-panel');
                var _resize = function () {
                    _$gridPanel.css('minHeight', $(window).height() - (_$gridPanel.offset().top + 15));
                    _$gridPanel.triggerHandler('resize');
                };
                $(window).resize(_resize);
                $page$.un('destroy').on('destroy', function () {
                    $(window).unbind('resize', _resize);
                });
                var $advsearch = $('.propertyFilter').advsearch({
                    filters: [{
                        name: 'S_phone',
                        text: '联系方式',
                        type: 'input',
                        matchType: ['EQ', 'LIKE']
                    }]
                });
                //列表初始化
                var pager = {{{pager}}};
                var $grid = $('#view').dataGrid($('#searchFormPanel'), $('.batch'));
                $grid.data('grid').view().on('add', function (data) {
                    this.target.find('.delete').click(function (e) {
                        return stopDefault(e);
                    });
                    this.target.find('.time').html((new Date(data.time)).format('yyyy-MM-dd')+' ');
                });
                $grid.setJSON(pager);

            });
        </script>
    {{/content}}
    {{#content "pageContent"}}
        <div id="searchFormPanel" class="button-panel pad5A">
            <form id="searchForm" action="/registrations/search" method="post">
                <div class="propertyFilter"></div>
                <div class="form-search">
                    <input type="hidden" name="EQS_doctorId" value="{{doctor.id}}"/>
                    <input type="text" name="LIKES_patientName" title="" data-placement="bottom"
                           class="input tooltip-button ac_input" placeholder="就诊人" autocomplete="off"
                           style="display: inline-block; width: 200px;">
                    <i class="glyph-icon icon-search"></i>
                </div>
            </form>
        </div>
        <div class="grid-panel">
            <table id="view" class="table table-hover mrg5B text-center">
                <thead>
                    <tr>
                        <th class="pad15L" style="width:20px;">
                            <input id="allChecked" class="custom-checkbox bg-white" checkAll=".id" type="checkbox"/>
                        </th>
                        <th>就诊人</th>
                        <th>就诊时间</th>
                        <th>就诊状态</th>
                        <th>就诊医生</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="template" name="default">
                        <td><input class="id custom-checkbox" type="checkbox" value="{id}"/></td>
                        <td>{patientName}</td>
                        <td><span class="time">{time}</span>{periodTime}</td>
                        <td>{status:dict({'untreated':'未处理','processing':'处理中','nocome':'未到','completed':'已完成','cancelled':'已取消'})}</td>
                        <td>{doctorName}</td>
                        <td class="pad0T pad0B text-center">
                            <div class="dropdown actions">
                                <a href="javascript:;" title="" class="btn medium bg-blue" data-toggle="dropdown">
                                    <span class="button-content">
                                        <i class="glyph-icon font-size-11 icon-cog"></i>
                                        <i class="glyph-icon font-size-11 icon-chevron-down"></i>
                                    </span>
                                </a>
                                <ul class="dropdown-menu float-right">
                                    <li>
                                        <a title="详情" class="view" href="/registrations/{id}" target="after:closest('#page-content')">
                                            <i class="glyph-icon icon-external-link-sign mrg5R"></i>
                                            详情
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="divider mrg0T"></div>
    {{/content}}
{{/extend}}