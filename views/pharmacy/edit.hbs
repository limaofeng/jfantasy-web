<script type="text/javascript">
    $(function () {
        $("#saveForm").ajaxForm({
            beforeSerialize: function (zhis, options) {
                var _data = {};
                options.data = _data;
            },
            success: function (data) {
                $('#pager').pager().reload();
                $.msgbox({
                    msg: "保存成功",
                    type: "success"
                });
                $page$.backpage();
            },
            error: function() {
                $.msgbox({
                    msg: "修改失败",
                    type: "error"
                });
            }
        });

        if($('.town').data('defval')){
            $('.province').attr('data-defval',$('.town').data('defval').toString().substring(0,2)+'0000');
            $('.city').attr('data-defval',$('.town').data('defval').toString().substring(0,4)+'00');
        }


        var town = $('.town').select3('/areas/search',{value:'id',text:'name'});
        var city = $('.city').select3('/areas/search',{value:'id',text:'name'},function(data){
            if(!data){
                return;
            }
            town.load({'EQS_parent.id':data.id,pageSize:500});
        });
        $('.province').select3('/areas/search',{value:'id',text:'name'},function(data){
            if(!data){
                return;
            }
            city.load({'EQS_parent.id':data.id,pageSize:200});
            $('.town').select3('',{value:'id',text:'name'}).load({});
        }).load({EQI_layer:0,pageSize:100});
    });
</script>
