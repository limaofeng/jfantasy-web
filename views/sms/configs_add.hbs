<style type="text/css">
    .paymentForm input {
        width: 200px;
    }
    .paymentForm select {
        width: 215px;
    }
</style>
<script type="text/javascript">
    $(function () {
        $("#saveForm").ajaxForm(function () {
            $('#pager').pager().reload();
            $.msgbox({
                msg: "保存成功",
                icon: "success"
            });
            $page$.backpage();
        });
    });
</script>
<form id="saveForm" action="/sms/configs/save" method="post">
    <table class="formTable mb3 paymentForm">
        <caption>手机验证码配置添加<a href="#" class="back-page" style="float:right;padding-right:50px;">返回</a></caption>
        <tbody>
            <tr>
                <td class="formItem_title w100">服务器名称:</td>
                <td class="formItem_content"><input type="text" name="serverName"></td>
            </tr>
            <tr>
                <td class="formItem_title w100">验证码:</td>
                <td class="formItem_content"><input type="text" name="randomWord"></td>
            </tr>
            <tr>
                <td class="formItem_title ">验证码验证失效时间:</td>
                <td class="formItem_content"><input type="text" name="expires" class="datepicker" data-format="yyyy-MM-dd HH:mm:ss"></td>
            </tr>
            <tr>
                <td class="formItem_title "> 验证码重复生成时间:</td>
                <td class="formItem_content"><input type="text" name="active" class="datepicker" data-format="yyyy-MM-dd HH:mm:ss"></td>
            </tr>
            <tr>
                <td class="formItem_title ">验证码验证重试次数:</td>
                <td class="formItem_content"><input type="text" name="retry"></td>
            </tr>
            <tr>
                <td class="formItem_title ">模板路径:</td>
                <td class="formItem_content"><input type="text" name="template"></td>
            </tr>
        </tbody>
    </table>
    <table class="formTable mb3">
        <tbody>
        <tr>
            <td class="formItem_title w100"></td>
            <td class="formItem_content">
                <a class="ui_button" href="javascript:void(0);" onclick="$('#saveForm').submit();return false;">保存</a>
            </td>
        </tr>
        </tbody>
    </table>
</form>
