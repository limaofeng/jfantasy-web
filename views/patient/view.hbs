<script>
    $(function(){
        $('.showPrescriptions').click(function(){
            var zhis = this;
            var url = $(this).data('href');
            $.get(url, function(data){
                $('.tempPrescriptions').remove();
                $(zhis).closest('tr').after('<tr class="tempPrescriptions"><td colspan="4">'+data+'</td></tr>');
            });
        });
    });
</script>
<div class="pad10L pad10R">
    <div class="example-box">
        <div class="tabs">
            <ul>
                <li>
                    <a title="基本信息" href="#normal-tabs-1">
                        基本信息
                    </a>
                </li>
                <li>
                    <a title="病历" href="#normal-tabs-2">
                        病历
                    </a>
                </li>
            </ul>
            <a href="javascript:;" class="btn small hover-black float-right back-page" title="" style="margin-top: -30px;margin-right: 30px">
                <i class="glyph-icon icon-reply"></i>
            </a>
            <div id="normal-tabs-1">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-row">
                            <div class="form-label col-md-3">
                                <label for="">
                                    姓名：
                                </label>
                            </div>
                            <div class="form-input col-md-9">
                                <div class="append-left">
                                    <input type="text" name="name" value="{{patient.name}}" readonly="true"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-row townView">
                            <div class="form-label col-md-3">
                                <label for="">
                                    生日：
                                </label>
                            </div>
                            <div class="form-input col-md-9">
                                <div class="append-left">
                                    <input name="birthday" data-date-format="yyyy-mm-dd" class="datepickerStart" value="{{date patient.birthday 'yyyy-MM-dd'}}" readonly="true"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-label col-md-3">
                                <label for="">
                                    联系方式：
                                </label>
                            </div>
                            <div class="form-input col-md-9">
                                <div class="append-left">
                                    <input type="text" name="phone" value="{{patient.phone}}" readonly="true"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-row">
                            <div class="form-label col-md-3">
                                <label for="">
                                    性别：
                                </label>
                            </div>
                            <div class="form-input col-md-9">
                                <div class="append-left">
                                    <input value="{{dict patient.sex '{male:"男", female:"女"}'}}" readonly="true"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-label col-md-3">
                                <label for="">
                                    身份证：
                                </label>
                            </div>
                            <div class="form-input col-md-9">
                                <div class="append-left">
                                    <input type="text" name="idcard" value="{{patient.idcard}}" readonly="true"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="normal-tabs-2">
                <div class="row">
                    <table class="table table-hover mrg5B text-center">
                        <thead>
                        <tr>
                            <th>病情描述</th>
                            <th>出诊医生</th>
                            <th>创建时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#if records}}
                            {{#records}}
                                <tr>
                                    <td>
                                        <span class="view-field">{{diseaseIntroduce}}</span>
                                    </td>
                                    <td>
                                        <span class="view-field">{{doctor.name}}</span>
                                    </td>
                                    <td>
                                        <span class="view-field">{{date createTime 'yyyy-MM-dd HH'}}</span>
                                    </td>
                                    <td>
                                        <a class="showPrescriptions" data-href="/patients/records/{{id}}/prescriptions">查看处方</a>
                                    </td>
                                </tr>
                            {{/records}}
                        {{else}}
                            <tr class="template" name="default">
                                <td colspan="3">
                                    <span class="view-field">暂无数据</span>
                                </td>
                            </tr>
                        {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="form-row" style="text-align: center;">
            <div>
                <div style="float: left;">
                    <a href="javascript:void(0);" class="btn medium primary-bg radius-all-4 switch menu-view back-page " title="返回">
                        <span class="glyph-icon icon-separator">
                              <i class="glyph-icon icon-reply"></i>
                        </span>
                         <span class="button-content">
                             返回
                         </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
