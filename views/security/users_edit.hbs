<form id="saveForm" action="/security/users/save" method="post" cssClass="center-margin">
    <table class="formTable mb3 paymentForm">
        <caption>用户编辑<a href="#" class="back-page" style="float:right;padding-right:50px;">返回</a></caption>
        <tbody>
        <tr>
            <td class="formItem_title w100">用户名</td>
            <td class="formItem_content "><input type="text"  name="username" id="username" autocomplete="off" class="w"  disabled="true" value="{{user.username}}"/></td>
        </tr>
        <tr>
            <td class="formItem_title w100">密码</td>
            <td class="formItem_content"><input type="password" name="password" id="password" autocomplete="off" class="w"  disabled="true" value="{{user.password}}"/></td>
        </tr>
        <tr>
            <td class="formItem_title w100">呢称</td>
            <td class="formItem_content"><input type="text" name="password" id="nickName" autocomplete="off" class="w"  disabled="true" value="{{user.password}}"/></td>
        </tr>
        <tr>
            <td class="formItem_title w100">邮箱</td>
            <td class="formItem_content"><input type="text" name="details.email" autocomplete="off" class="w"  disabled="true" value="{{user.details.email}}"/></td>
        </tr>
        <tr>
            <td class="formItem_title w100">角色</td>
            <td class="formItem_content">
                {{#roles}}
                    <label><input type="checkbox" name="roles.code" value="{{code}}" class="custom-checkbox" {{#../user.roles}}{{#compare ../code '==' code}}checked="checked"{{/compare}}{{/../user.roles}} style="line-height:10px "/>{{name}}</label>
                {{/roles}}
            </td>
        </tr>
        <tr>
            <td class="formItem_title w100">站点</td>
            <td class="formItem_content"><select class="chosen-select w" name="website.id" >
                {{#websites}}
                    <option value="{{key}}" {{#compare key '==' ../user.website.key}}checked="checked"{{/compare}}>{{name}}</option>
                {{/websites}}
            </select>
            </td>
        </tr>
        <tr>
            <td class="formItem_title w100">备注</td>
            <td class="formItem_content"><textarea name="details.description" class="small-textarea" css="height: 90px;">{{user.detauls.description}}</textarea></td>
        </tr>
        </tbody>
    </table>
    <table id="saveFormButs" class="formTable mb3">
        <tr>
            <td class="formItem_title w100"></td>
            <td class="formItem_content"><a href="javascript:void(0);" onclick="$('#saveForm').submit();return false;" class="ui_button">保存</a></td>
        </tr>
    </table>
</form>
