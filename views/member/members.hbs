{{#extend "wrapper"}}
    {{#content "pageTitle"}}
        会员列表
        <small>
            所有注册会员信息
        </small>
    {{/content}}
    {{#content "head"}}
        <script type="text/javascript">
            $(function () {
                //当浏览器窗口发生变化时,自动调整布局的js代码
                var _$gridPanel = $('.grid-panel');
                var _resize = function () {
                    _$gridPanel.css('minHeight', $(window).height() - (_$gridPanel.offset().top + 15));
                    _$gridPanel.triggerHandler('resize');
                };
                $(window).resize(_resize);
                $page$.un('destroy').on('destroy', function () {
                    $(window).unbind('resize', _resize);
                });
                var $advsearch = $('.propertyFilter').advsearch({
                    filters: [{
                        name: 'S_username',
                        text: '会员号',
                        type: 'input',
                        matchType: ['EQ', 'LIKE']
                    }, {
                        name: 'S_details.name',
                        text: '会员名',
                        type: 'input',
                        matchType: ['EQ', 'LIKE']
                    }]
                });
                //列表初始化
                var pager = {{{pager}}};
                var $grid = $('#view').dataGrid($('#searchFormPanel'), $('.batch'));
                $grid.data('grid').view().on('add', function (data) {
                    this.target.find('.delete').click(function (e) {
                        deleteMethod([data.id]);
                        return stopDefault(e);
                    });
                });
                $grid.setJSON(pager);
                var deleteMethod = $('.batchDelete').batchExecute($("#allChecked"), $grid.data('grid').pager(), 'id', '是否确认删除[{username}]用户？', function () {
                    $.msgbox({
                        msg: "删除成功",
                        type: "success"
                    });
                });
            });
        </script>
    {{/content}}
    {{#content "pageContent"}}
        <div id="searchFormPanel" class="button-panel pad5A">
            <form id="searchForm" action="/members/search" method="post">
                <a title="添加" class="btn medium primary-bg dd-add" href="/members/add" target="after:closest('#page-content')">
                    <span class="button-content">
                        <i class="glyph-icon icon-plus float:left"></i>
                        添加
                    </span>
                </a>
                <div class="propertyFilter">
                </div>
                <div class="form-search">
                    <input type="text" name="LIKES_username" title="" data-placement="bottom"
                           class="input tooltip-button ac_input" placeholder="会员号查询" autocomplete="off"
                           style="display: inline-block; width: 200px;">
                    <i class="glyph-icon icon-search"></i>
                </div>
            </form>
        </div>
        <div class="batch">
            <a title="批量删除" class="btn small primary-bg batchDelete" href="/members/delete">
        <span class="button-content">
            <i class="glyph-icon icon-trash float-left"></i>
            批量删除
        </span>
            </a>
        </div>
        <div class="grid-panel">
            <table id="view" class="table table-hover mrg5B text-center">
                <thead>
                <tr>
                    <th class="pad15L" style="width:20px;">
                        <input id="allChecked" class="custom-checkbox bg-white" checkAll=".id" type="checkbox"/>
                        {{!--checktip="{message:'您选中了{num}条记录',tip:'#config_check_info'}"--}}
                    </th>
                    <th class="sort" orderBy="username">会员号</th>
                    <th class="sort" orderBy="name">会员姓名</th>
                    <th>是否启用</th>
                    <th class="text-center">操作</th>
                </tr>
                </thead>
                <tbody>
                <tr class="template" name="default">
                    <td><input class="id custom-checkbox" type="checkbox" value="{id}"/></td>
                    <td class="font-bold">{username}</td>
                    <td>{details.name}</td>
                    <td>{enabled:dict({'true':'是','false':'否'})}</td>
                    <td class="pad0T pad0B text-center">
                        <div class="dropdown actions">
                            <a href="javascript:;" title="" class="btn medium bg-blue" data-toggle="dropdown">
                                <span class="button-content">
                                    <i class="glyph-icon font-size-11 icon-cog"></i>
                                    <i class="glyph-icon font-size-11 icon-chevron-down"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu float-right">
                                <li>
                                    <a title="详情" class="view" href="/members/{id}" target="after:closest('#page-content')">
                                        <i class="glyph-icon icon-external-link-sign mrg5R"></i>
                                        详情
                                    </a>
                                </li>
                                <li>
                                    <a title="编辑" class="edit" href="/members/{id}/edit" target="after:closest('#page-content')">
                                        <i class="glyph-icon icon-edit mrg5R"></i>
                                        编辑
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="/members/{id}/delete" class="font-red delete" title="删除">
                                        <i class="glyph-icon icon-remove mrg5R"></i>
                                        删除
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="divider mrg0T"></div>
    {{/content}}
{{/extend}}