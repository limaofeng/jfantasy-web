        <i class="glyph-icon icon-reply"></i>
    </a>
    <div id="normal-tabs-1">
        <div class="row">
            <div class="col-md-6">
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            用户账号：
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                            {{member.username}}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            昵称：
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                            {{member.nickName}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                        </div>
                    </div>
                </div>
