<script type="text/javascript">
    $(function () {
        $("#saveForm").ajaxForm({
            success: function (data) {
                $('#pager').pager().reload();
                top.$.msgbox({
                    msg: "保存成功",
                    icon: "success"
                });
                $page$.backpage();
            }
        });
    });
</script>
<form id="saveForm" action="/security/resources/save" method="post" class="center-margin">
    <table class="formTable mb3 paymentForm">
        <caption>资源编辑<a href="#" class="back-page" style="float:right;padding-right:50px;">返回</a></caption>
        <tbody>
        <input type="hidden" name="id"  value="{{resource.id}}"/>
        <tr>
            <td class="formItem_title w100">名称:</td>
            <td class="formItem_content"><input type="text" name="name" class="w"  value="{{resource.name}}"></td>
        </tr>
        <tr>
            <td class="formItem_title ">类型:</td>
            <td class="formItem_content">
                <select name="type" class="w">
                    <option value="{{resource.type}}" checked="checked">{{resource.type}}</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="formItem_title ">描述:</td>
            <td class="formItem_content"><textarea name="description"  class="w">{{resource.description}}</textarea>
            </td>
        </tr>
        <tr>
            <td class="formItem_title ">值</td>
            <td class="formItem_content"><input type="text" name="value"  class="w" value="{{resource.value}}"/></td>
        </tr>
        </tbody>
    </table>
    <table class="formTable mb3">
        <tbody>
        <tr>
            <td class="formItem_title w100"></td>
            <td class="formItem_content">
                <a class="ui_button" href="javascript:void(0);" onclick="$('#saveForm').submit();return false;">保存</a>
            </td>
        </tr>
        </tbody>
    </table>
</form>
