<script type="text/javascript">
    $(function(){
        $("#saveForm").ajaxForm(function () {
            $('#pager').pager().reload();
            $.msgbox({
                msg: "保存成功",
                icon: "success"
            });
            $page$.backpage();
        });
    });

</script>
<form id="saveForm" action="/admin/cms/newbanner/save.do" method="post">
    <table class="formTable">
        <caption>广告位基本信息<a href="###" class="back-page">返回</a></caption>
        <tbody>
        <tr>
            <td class="formItem_title w100">编码:</td>
            <td class="formItem_content"><input name="key" type="text" class="w250"  ></td>
            <td class="formItem_title w100"></td>
            <td class="formItem_content"></td>
        </tr>
        <tr>
            <td class="formItem_title w100">名称:</td>
            <td class="formItem_content"><input name="name" type="text" class="w250"  autocomplete="off"/></td>
            <td class="formItem_title w100">图片大小:</td>
            <td class="formItem_content"><input name="size" type="text" class="w250" value="539x244"/></td>
        </tr>
        <tr>
            <td class="formItem_title">描述:</td>
            <td class="formItem_content" colspan="3"><textarea name="description" style="height: 150px;width:98%;" ></textarea></td>
        </tr>
        </tbody>
    </table>
    <table id="view" class="formTable">
        <caption>广告项列表<a href="###" class="add-item" style="padding-left:50px;">添加广告图</a></caption>
        <tr class="template" name="update" >
            <td>
                <input name="bannerItems[#index].id" class="view-field" type="hidden" mapping="id" />
                <input name="bannerItems[#index].bannerImageStore" class="view-field"  type="hidden" mapping="bannerImageStore"/>
                <table class="formTable">
                    <tr>
                        <td class="formItem_title w100">标题:</td>
                        <td class="formItem_content">
                            <textarea name="bannerItems[#index].title" style="height: 150px;width:98%;" class="view-field" rows="" cols="" mapping="title"></textarea>

                        </td>
                        <td class="formItem_content" rowspan="2">
                            <div id="uploader"></div>
                        </td>
                    </tr>
                    <tr>
                        <td class="formItem_title w100">跳转地址:</td>
                        <td class="formItem_content"><input name="bannerItems[#index].url" class="view-field w250" type="text" mapping="url"/>
                            <div style="float:right;padding-right:20px;">
                                <a href="###" class="cancel" style="padding-left:5px;">取消</a>/
                                <span class="delete-div"><a class="delete" href="###">删除</a>/</span>
                                <a href="###" class="save" template="update" style="padding-right:5px;">保存</a>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr class="template" name="default" >
            <td>
                <input name="bannerItems[#index].id" class="view-field" type="hidden" mapping="id" />
                <input name="bannerItems[#index].title" class="view-field" type="hidden" mapping="title" />
                <input name="bannerItems[#index].bannerImageStore" class="view-field" type="hidden" mapping="bannerImageStore" />
                <input name="bannerItems[#index].summary" class="view-field" type="hidden" mapping="summary"/>
                <input name="bannerItems[#index].url" class="view-field w250" type="hidden" mapping="url"/>
                <table class="formTable">
                    <tr>
                        <td class="formItem_title w100">标题:</td>
                        <td class="formItem_content">
                            <span>{title}</span>
                            <div style="float:right;padding-right:20px;">
                                <a class="delete" href="###">删除</a>/
                                <a href="###" class="switch only" template='update' style="float:right;padding-right:5px;">编辑</a>
                            </div>
                        </td>
                        <td class="formItem_content" rowspan="3">
                            <div id="uploader"></div>
                        </td>
                    </tr>
                    <tr>
                        <td class="formItem_title w100">跳转地址:</td>
                        <td class="formItem_content">{url}</td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr class="empty"><td class="norecord" colspan="4">暂无数据</td></tr>
    </table>
    <table id="saveFormButs" class="formTable mb3">
        <tr>
            <td class="formItem_title w100"></td>
            <td class="formItem_content"><a href="javascript:void(0);" onclick="$('#saveForm').submit();return false;" class="ui_button">保存</a></td>
        </tr>
    </table>
</form>