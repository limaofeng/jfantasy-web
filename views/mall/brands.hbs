{{#extend "wrapper"}}
    {{#content "pageTitle"}}
        品牌维护
        <small>
            品牌管理
        </small>
    {{/content}}
    {{#content "head"}}
    <script type="text/javascript">
        $(function(){
            //当浏览器窗口发生变化时,自动调整布局的js代码
            var _$gridPanel = $('.grid-panel'),_resize = function () {
                _$gridPanel.css('minHeight', $(window).height() - (_$gridPanel.offset().top + 15));
                _$gridPanel.triggerHandler('resize');
            };
            $(window).resize(_resize);
            $page$.one('destroy',function(){
                $(window).unbind('resize',_resize);
            });
            var $advsearch = $('.propertyFilter').advsearch({
                filters : [{
                    name : 'S_engnamee',
                    text : '英文名称',
                    type : 'input',
                    matchType :['EQ','LIKE']
                },{
                    name : 'S_name',
                    text : '品牌名称',
                    type : 'input',
                    matchType :['EQ','LIKE']
                }]
            });
            /**
             ,{
                    name : 'S_name',
                    text : '测试select',
                    type : 'select',
                    matchType :['EQ','LIKE'],
                    values: [
                        {text: '选项1', value: '1'},
                        {text: '选项2', value: '2'},
                        {text: '选项3', value: '3'}
                    ]
                }]
             }
             */
            //列表初始化
            var pager = {{{string pager}}};
            var $grid = $('#view').dataGrid($('#searchFormPanel'),$('.batch'));
            $grid.data('grid').view().on('add',function(data){
                this.target.find('.delete').click(function(e){
                    deleteMethod([data.id]);
                    return stopDefault(e);
                });
            });
            $grid.setJSON(pager);
            var deleteMethod = $('.batchDelete').batchExecute($("#allChecked"), $grid.data('grid').pager(), 'id', '是否确认删除[{name}]品牌？', function () {
                $.msgbox({
                    msg : "保存成功",
                    type : "success"
                });
            });
        });
    </script>
    {{/content}}
    {{#content "pageContent"}}
    <div id="searchFormPanel" class="button-panel pad5A">
        <form id="searchForm" action="/mall/brands/search" method="post">
            <a title="添加" class="btn medium primary-bg dd-add" href="/mall/brands/add" target="after:closest('#page-content')">
                <span class="button-content">
                    <i class="glyph-icon icon-plus float-left"></i>
                    添加
                </span>
            </a>
            <div class="propertyFilter">
            </div>
            <div class="form-search">
                <input type="text" name="LIKES_name_OR_engname" title="" data-placement="bottom" class="input tooltip-button ac_input" placeholder="Search..." autocomplete="off" style="display: inline-block; width: 200px;">
                <i class="glyph-icon icon-search"></i>
            </div>
        </form>
    </div>
    <div class="batch">
        <a title="批量删除" class="btn small primary-bg batchDelete" href="/mall/brands/delete">
            <span class="button-content">
                <i class="glyph-icon icon-trash float-left"></i>
                批量删除
            </span>
        </a>
    </div>
    <div class="grid-panel">
        <table id="view" class="table table-hover mrg5B text-center">
            <thead>
            <tr>
                <th class="pad15L" style="width:20px;"><input id="allChecked" class="custom-checkbox bg-white" checkAll=".id" type="checkbox"/> </th>
                <th class="sort" orderBy="name">名称</th>
                <th class="sort" orderBy="engname">英文名称</th>
                <th>链接</th>
                <th class="text-center">操作</th>
            </tr>
            </thead>
            <tbody>
            <tr class="template" name="default">
                <td><input class="id custom-checkbox" type="checkbox" value="{id}"/></td>
                <td class="font-bold">{name} </td>
                <td>{engname}</td>
                <td>{url}</td>
                <td class="pad0T pad0B text-center">
                    <div class="dropdown actions">
                        <a href="javascript:;" title="" class="btn medium bg-blue" data-toggle="dropdown">
                            <span class="button-content">
                                <i class="glyph-icon font-size-11 icon-cog"></i>
                                <i class="glyph-icon font-size-11 icon-chevron-down"></i>
                            </span>
                        </a>
                        <ul class="dropdown-menu float-right">
                            <li>
                                <a href="/mall/brands/view?id={id}" class="view" title="品牌明细" target="after:closest('#page-content')">
                                    <i class="glyph-icon icon-external-link-sign mrg5R"></i>
                                    明细
                                </a>
                            </li>
                            <li>
                                <a title="编辑" class="edit" href="/mall/brands/{id}/edit" target="after:closest('#page-content')">
                                    <i class="glyph-icon icon-edit mrg5R"></i>
                                    编辑
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/mall/brands/{id}/delete" class="font-red delete" title="删除">
                                    <i class="glyph-icon icon-remove mrg5R"></i>
                                    删除
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="divider mrg0T"></div>
    {{/content}}
{{/extend}}