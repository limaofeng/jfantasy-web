                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                            {{member.details.tel}}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            移动电话：
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                            {{member.details.mobile}}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            邮箱：
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                            {{member.details.email}}
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            积分：
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                        {{member.details.score}}
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-label col-md-3">
                        <label for="">
                            描述：
                        </label>
                    </div>
                    <div class="form-input col-md-9">
                        <div class="append-left">
                            <textarea style="width:880px;height: 160px;" readonly="true">{{member.details.description}}</textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                {{!--
                <div class="form-row" style="padding-left: 60px;padding-bottom:31px;">
                    <div class="form-label col-md-2"></div>
                    <div class="form-input col-md-10">
                        <img src="{{member.details.avatar.absolutePath}}" ratio="160x160" class="img-thumbnail"/>
                    </div>
                </div>
                --}}
                <div class="form-row" style="padding-left: 60px;padding-bottom:31px;">
                    <div class="form-label col-md-2"></div>
                    <div class="form-input col-md-10" id="imageUploader"></div>
                </div>
            </div>
            <div class="col-md-6">

            </div>
        </div>
    </div>
