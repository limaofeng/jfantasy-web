<script type="text/javascript">
    $(function () {
        $('.datepickerStart').datepicker({
            isInput: true
        }).on('changeDate', function (d) {
        });
        $("#saveForm").ajaxForm({
            beforeSerialize: function (zhis, options) {
                var _data = {};
                options.data = _data;
            },
            success: function (data) {
                $('#pager').pager().reload();
                $.msgbox({
                    msg: "保存成功",
                    type: "success"
                });
                $page$.backpage();
            },
            error: function() {
                $.msgbox({
                    msg: "修改失败",
                    type: "error"
                });
            }
        });
    });
</script>
<div class="pad10L pad10R">
    <div class="example-box">
        <form id="saveForm" action="/patients/save" method="post" cssClass="center-margin">
            <input type="hidden" name="id" value="{{patient.id}}">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                姓名：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <input type="text" name="name" value="{{patient.name}}"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-row townView">
                        <div class="form-label col-md-3">
                            <label for="">
                                生日：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <input name="birthday" data-date-format="yyyy-mm-dd" class="datepickerStart" value="{{date patient.birthday 'yyyy-MM-dd'}}"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                联系方式：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <input type="text" name="phone" value="{{patient.phone}}"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                性别：
                            </label>
                        </div>
                        <div class="form-checkbox-radio col-md-9">
                            <div class="append-left">
                                <label class="choice" for="details_sex_male">
                                    <input type="radio" id="details_sex_male" name="sex" value="male" {{#equals patient.sex 'male'}}checked="true" {{/equals}}/>男
                                </label>
                                <label class="choice" for="details_sex_female">
                                    <input type="radio" id="details_sex_female" name="sex" value="female" {{#equals patient.sex 'female'}}checked="true" {{/equals}}>女
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-label col-md-3">
                            <label for="">
                                身份证：
                            </label>
                        </div>
                        <div class="form-input col-md-9">
                            <div class="append-left">
                                <input type="text" name="idcard" value="{{patient.idcard}}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row" style="text-align: center;">
                <div>
                    <div style="float: left;padding-right: 50px;padding-left: 27px;">
                        <a href="javascript:void(0);" class="btn medium primary-bg radius-all-4 menu-save4" onclick="$('#saveForm').submit();return false;" title=" 保存">
                            <span class="glyph-icon icon-separator">
                                 <i class="glyph-icon icon-save"></i>
                            </span>
                             <span class="button-content">
                                 保存
                             </span>
                        </a>
                    </div>
                    <div style="float: left;">
                        <a href="javascript:void(0);" class="btn medium primary-bg radius-all-4 switch menu-view back-page " title="返回">
                            <span class="glyph-icon icon-separator">
                                  <i class="glyph-icon icon-reply"></i>
                            </span>
                             <span class="button-content">
                                 返回
                             </span>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
