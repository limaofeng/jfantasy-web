{{#extend "wrapper"}}
    {{#content "pageTitle"}}
        医生列表
        <small>
            所有医生信息
        </small>
    {{/content}}
    {{#content "head"}}
        <link href='/assets/js/fullcalendar/fullcalendar.css' rel='stylesheet'/>
        <script src='/assets/js/fullcalendar/lib/moment.min.js'></script>
        <script src='/assets/js/fullcalendar/fullcalendar.min.js'></script>
        <script src='/assets/js/fullcalendar/lang/zh-cn.js'></script>
        <script language="javascript" type="text/javascript" src="/static/js/common/autocomplete/jquery.autocomplete.js" charset="utf-8"></script>
        <script src='/assets/js/calendar.js'></script>
        <link href='/stylesheets/mycss.css' rel='stylesheet'/>
        <script type="text/javascript">
            $(function () {
                //当浏览器窗口发生变化时,自动调整布局的js代码
                var _$gridPanel = $('.grid-panel');
                var _resize = function () {
                    _$gridPanel.css('minHeight', $(window).height() - (_$gridPanel.offset().top + 15));
                    _$gridPanel.triggerHandler('resize');
                };
                $(window).resize(_resize);
                $page$.un('destroy').on('destroy', function () {
                    $(window).unbind('resize', _resize);
                });
                var $advsearch = $('.propertyFilter').advsearch({
                    filters: [{
                        name: 'S_name',
                        text: '姓名',
                        type: 'input',
                        matchType: ['EQ', 'LIKE']
                    }]
                });
                //列表初始化
                var pager = {{{pager}}};
                var $grid = $('#view').dataGrid($('#searchFormPanel'), $('.batch'));
                $grid.data('grid').view().on('add', function (data) {
                    this.target.find('.delete').click(function (e) {
                        deleteMethod([data.id]);
                        return stopDefault(e);
                    });

                });
                $grid.setJSON(pager);
                var deleteMethod = $('.batchDelete').batchExecute($("#allChecked"), $grid.data('grid').pager(), 'id', '是否确认删除[{name}]用户？', function () {
                    $.msgbox({
                        msg: "删除成功",
                        type: "success"
                    });
                });

//                $('.dd_data').each(function(i,d){
//                    var zhis = this;
//                    var key = $(this).data('ddkey');
//                    if(!key) return;
//                    $.post('/system/dds/'+key,function(dd){
//                        console.log(key);
//                        if(!dd) return;
//                        console.log(JSON.stringify(dd));
//                        $(zhis).html(dd.name);
//                    });
//                });
            });
        </script>
    {{/content}}
    {{#content "pageContent"}}
        <div id="searchFormPanel" class="button-panel pad5A">
            <form id="searchForm" action="/doctors/search" method="post">
                <a title="添加" class="btn medium primary-bg dd-add" href="/doctors/add" target="after:closest('#page-content')">
                    <span class="button-content">
                        <i class="glyph-icon icon-plus float:left"></i>
                        添加
                    </span>
                </a>
                <div class="propertyFilter">
                </div>
                <div class="form-search">
                    <input type="text" name="LIKES_name" title="" data-placement="bottom"
                           class="input tooltip-button ac_input" placeholder="医生姓名查询" autocomplete="off"
                           style="display: inline-block; width: 200px;">
                    <i class="glyph-icon icon-search"></i>
                </div>
            </form>
        </div>
        <div class="batch">
            <a title="批量删除" class="btn small primary-bg batchDelete" href="/doctors/delete">
        <span class="button-content">
            <i class="glyph-icon icon-trash float-left"></i>
            批量删除
        </span>
            </a>
        </div>
        <div class="grid-panel">
            <table id="view" class="table table-hover mrg5B text-center">
                <thead>
                <tr>
                    <th class="pad15L" style="width:20px;">
                        <input id="allChecked" class="custom-checkbox bg-white" checkAll=".id" type="checkbox"/>
                    </th>
                    <th class="sort" orderBy="name">医生姓名</th>
                    <th>医生性别</th>
                    <th>科室</th>
                    <th class="sort" orderBy="workingYear">工作年限</th>
                    <th class="text-center">操作</th>
                </tr>
                </thead>
                <tbody>
                <tr class="template" name="default">
                    <td><input class="id custom-checkbox" type="checkbox" value="{id}"/></td>
                    <td class="font-bold">{name}</td>
                    <td>{sex:dict({'male':'男','female':'女'})}</td>
                    <td>{department}</td>
                    <td>{workingYear}</td>
                    <td class="pad0T pad0B text-center">
                        <div class="dropdown actions">
                            <a href="javascript:;" title="" class="btn medium bg-blue" data-toggle="dropdown">
                                <span class="button-content">
                                    <i class="glyph-icon font-size-11 icon-cog"></i>
                                    <i class="glyph-icon font-size-11 icon-chevron-down"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu float-right">
                                <li>
                                    <a title="详情" class="view" href="/doctors/{id}" target="after:closest('#page-content')">
                                        <i class="glyph-icon icon-external-link-sign mrg5R"></i>
                                        详情
                                    </a>
                                </li>
                                <li>
                                    <a title="编辑" class="edit" href="/doctors/{id}/edit" target="after:closest('#page-content')">
                                        <i class="glyph-icon icon-edit mrg5R"></i>
                                        编辑
                                    </a>
                                </li>
                                <li>
                                    <a title="排班" class="plan" href="/doctors/{id}/plan" target="after:closest('#page-content')">
                                        <i class="glyph-icon icon-edit mrg5R"></i>
                                        排班
                                    </a>
                                </li>
                                <li>
                                    <a title="挂号列表" class="plan" href="/doctors/{id}/registrations" target="_blank">
                                        <i class="glyph-icon icon-edit mrg5R"></i>
                                        挂号列表
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="/doctors/{id}/delete" class="font-red delete" title="删除">
                                        <i class="glyph-icon icon-remove mrg5R"></i>
                                        删除
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="divider mrg0T"></div>
    {{/content}}
{{/extend}}